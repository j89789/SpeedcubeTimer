<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.speedcubeapp.timer" >

    <application
        android:name="com.speedcubeapp.timer.SpeedcubeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.speedcubeapp.timer.TimerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.speedcubeapp.timer.SettingsActivity"
            android:label="@string/settings" />
        <activity
            android:name="com.speedcubeapp.timer.TimeListActivity"
            android:label="@string/time_list" >
        </activity>
    </application>

</manifest>
